<section class="card">
  <header>{{post.name}} Posted by {{post.user.username}} on {{format_date post.date}}</header>

  <p> {{post.body}}</p>

</section>
{{#if loggedIn}}
<button id="comment_post" class="btn btn-primary widthfc" type="button">Comment</button>
<script src="/js/comment.js"></script>
{{/if}}
{{#if editPost}}
<button id="edit_post" class="btn btn-primary widthfc" type="button">Edit</button>
<button id="delete_post" class="btn btn-primary widthfc" type="button">Delete</button>
<script src="/js/editpost.js"></script>
{{/if}}
{{#each post.comments as |comment|}}
{{> comment-details}}
{{/each}}